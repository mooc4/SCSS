<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.web.strictteach.mapper.StudentMapper">
    <insert id="insert">
        insert into student(id,name,sex,age)
        values(#{id},#{name},#{sex},#{age})
    </insert>
    <update id="update">
        update student set name=#{name},sex=#{sex},age=#{age}
        where id=#{id}
    </update>
    <delete id="delete">
        delete from student where id=#{id}
    </delete>
    <select id="selectAll" resultType="com.web.strictteach.pojo.Student">
        select * from student
        <where>
            <if test="name != null">name  like concat('%',#{name},'%')</if>
        </where>
        order by id desc
    </select>


</mapper>