<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.web.strictteach.mapper.CourseMapper">
    <insert id="insert">
        insert into course(id,teacher,subject,sex,age)
        values(#{id},#{teacher},#{subject},#{sex},#{age})
    </insert>
    <update id="update">
        update course set subject=#{subject},teacher=#{teacher},sex=#{sex},age=#{age}
                           where id=#{id}
    </update>
    <delete id="delete">
        delete from course where id=#{id}
    </delete>
    <select id="selectAll" resultType="com.web.strictteach.pojo.Course">
        select * from course
        <where>
            <if test="subject != null">subject  like concat('%',#{subject},'%')</if>
        </where>
        order by id desc
    </select>


</mapper>